# CoreJava
import java.util.Scanner;

class AddNumbers
{
  public static void main(String[] args)
  {
    
    Scanner s1=new Scanner(System.in);    
    String choice;
    
    do
    {
    System.out.println("Please enter first Number1:");
    int n1=s1.nextInt();
    
    System.out.ptintln("Please enter Number2");
    int n2=s1.nextInt();
    
    int ans=n1+n2;
    System.out.println("The sum of two numbers is::"+ans);
    
    
    System.out.println("Do you want to continue?Yes or No");
    choice=s1.next();    
    }while(choice=s1.equalsIgnoreCase("Yes")||choice=s1.equalsIgnoreCase("Y"))
  }
}
